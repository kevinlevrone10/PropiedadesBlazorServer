@page "/Contacto"
@layout Customlayout



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bienes Raices</title>
    <link rel="stylesheet" href="personalizado/build/css/app.css">
</head>
<body>
    
    <header class="header">
        <div class="contenedor contenido-header">
            <div class="barra">
                <a href="/Landing">
                    <img src="personalizado/build/img/logo.svg" alt="Logotipo de Bienes Raices">
                </a>

                <div class="mobile-menu">
                    <img src="personalizado/build/img/barras.svg" alt="icono menu responsive">
                </div>


                
            </div> <!--.barra-->
        </div>
    </header>

    <main class="contenedor seccion">
        <h1 style="color:black;">Contacto</h1>

        <picture>
            <source srcset="personalizado/build/img/destacada3.webp" type="image/webp">
            <source srcset="personalizado/build/img/destacada3.jpg" type="image/jpeg">
            <img loading="lazy" src="personalizado/build/img/destacada3.jpg" alt="Imagen Contacto">
        </picture>

        <h2 style="color:black;">Llene el formulario de Contacto</h2>

        <form class="formulario">
            <fieldset>
                <legend style="color:black;">Información Personal</legend>

                <label style="color:black;" for="nombre">Nombre</label>
                <input type="text" placeholder="Tu Nombre" id="nombre">

                <label style="color:black;" for="email">E-mail</label>
                <input type="email" placeholder="Tu Email" id="email">

                <label style="color:black;" for="telefono">Teléfono</label>
                <input type="tel" placeholder="Tu Teléfono" id="telefono">

                <label style="color:black;" for="mensaje">Mensaje:</label>
                <textarea id="mensaje"></textarea>
            </fieldset>

            <fieldset>
                <legend style="color:black;">Información sobre la propiedad</legend>

                <label style="color:black;" for="opciones">Vende o Compra:</label>
                <select id="opciones">
                    <option value="" disabled selected>-- Seleccione --</option>
                    <option value="Compra">Compra</option>
                    <option value="Vende">Vende</option>
                </select>

                <label style="color:black;" for="presupuesto">Precio o Presupuesto</label>
                <input style="color:black;" type="number" placeholder="Tu Precio o Presupuesto" id="presupuesto">

            </fieldset>

            <fieldset>
                <legend style="color:black;">Información sobre la propiedad</legend>

                <p style="color:black;">Como desea ser contactado</p>

                <div class="forma-contacto">
                    <label style="color:black;" for="contactar-telefono">Teléfono</label>
                    <input name="contacto" type="radio" value="telefono" id="contactar-telefono">

                    <label style="color:black;" for="contactar-email">E-mail</label>
                    <input name="contacto" type="radio" value="email" id="contactar-email">
                </div>

                <p style="color:black;">Si eligió teléfono, elija la fecha y la hora</p>

                <label style="color:black;" for="fecha">Fecha:</label>
                <input type="date" id="fecha">

                <label style="color:black;" for="hora">Hora:</label>
                <input type="time" id="hora" min="09:00" max="18:00">

            </fieldset>

            <input type="submit" value="Enviar" class="boton-verde">
        </form>
    </main>

    <footer class="footer seccion">
       

        <p class="copyright">UNAN 2024</p>
    </footer>

    <script src="personalizado/build/js/bundle.min.js"></script>

</body>


<style>
    /* Aquí puedes añadir estilos específicos para tu landing */
    .dark-mode {
        background-color: #FFFFFF; /* Fondo blanco */
        color: #000000; /* Color del texto negro */
    }

    .tocado {
        color: #FFFFFF; /* Texto blanco */
    }

    .tocado2{
         color: #000000; /* Color del texto negro */
    }
    
    

    .dark-mode .boton-amarillo,
    .dark-mode .boton-verde {
        background-color: #ffcc00; /* Color de fondo de los botones */
        color: #000; /* Color del texto de los botones */
    }

    .dark-mode .boton-amarillo:hover,
    .dark-mode .boton-verde:hover {
        background-color: #ffdb4d; /* Color de fondo en hover para los botones */
    }
</style>


</html>
